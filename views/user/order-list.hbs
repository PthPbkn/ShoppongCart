<Section style="padding-top: 5rem";>
    <div class="container py-5">
        {{#each ordersList}}
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <div class="card shadow-0 border rounded-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                    <img src="/product-images/{{this.item}}.jpg"
                                        class="w-50" />
                                    <a href="#!">
                                        <div class="hover-overlay">
                                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);">
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            
                            <div class="col-md-6 col-lg-6 col-xl-6">
                                <h5>{{this.product.Name}}</h5>
                                <div class="mt-1 mb-0 small">
                                    <span>Price :£ {{this.product.Price}} </span>                    
                                </div>
                                <div class="mt-1 mb-0 small">
                                    <span>Order Date: </span>
                                    <span class="text-primary">{{this.time}} </span>                                   
                                </div>
                                <div class="mt-1 mb-0 small">
                                    <span>Status : {{this.status}} </span>
                                    <span class="text-success">{{this.status}} </span>                           
                                </div>
                                


                                                                
                                <p class="text-truncate mb-4 mb-md-0">
                                    {{this.product.Description}}
                            </div>
                            <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                <div class="d-flex flex-row align-items-center mb-1">
                                    <h4 class="mb-1 me-1">Total: £{{this.amount}}</h4>
                                </div>
                                <h6 class="text-success">Quantity: {{this.quantity}}</h6>
                                <div class="d-flex flex-column mt-4">
                                    <button class="btn btn-primary btn-sm" type="button">Details</button>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
      {{/each}}  
    </div>
</section>